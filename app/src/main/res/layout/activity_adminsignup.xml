<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="20dp"
    android:paddingHorizontal="30dp"
    android:background="#138ff7"
    tools:context=".adminsignup">

    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Let's Get Started!"
        android:textColor="#000"
        android:textSize="35dp"
        app:fontFamily="@font/kotta_one"
        android:textStyle="bold"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#81D4FA"
            android:gravity="center">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ProgressBar
                    android:id="@+id/pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:indeterminateTint="@color/black"/>
            </FrameLayout>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/adminname"
                android:layout_width="250dp"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/arvo"
                android:hint="Name"

                android:textColor="@color/black"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:cursorVisible="true"
                android:scrollHorizontally="true"
                android:textCursorDrawable="@null"

                app:met_textColorHint="#000"
                app:met_primaryColor="#000"
                app:met_floatingLabel="highlight"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/adminemail"
                android:layout_width="250dp"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/arvo"
                android:hint="Email"

                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:cursorVisible="true"
                android:scrollHorizontally="true"
                android:textCursorDrawable="@null"

                app:met_textColorHint="#000"
                app:met_primaryColor="#000"
                app:met_floatingLabel="highlight"
                android:layout_below="@id/adminname"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/adminphone"
                android:layout_width="250dp"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/arvo"
                android:hint="Phone"

                android:textColor="@color/black"
                android:inputType="phone"
                android:singleLine="true"
                android:cursorVisible="true"
                android:scrollHorizontally="true"
                android:textCursorDrawable="@null"

                app:met_textColorHint="#000"
                android:maxLength="12"
                app:met_primaryColor="#000"
                app:met_floatingLabel="highlight"
                android:layout_below="@id/adminemail"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password1"
                android:layout_width="250dp"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/arvo"
                android:hint="Password"

                android:textColor="@color/black"
                android:inputType="textPassword"
                android:singleLine="true"
                android:cursorVisible="true"
                android:scrollHorizontally="true"
                android:textCursorDrawable="@null"

                app:met_textColorHint="#000"
                app:met_primaryColor="#000"
                app:met_floatingLabel="highlight"
                android:layout_below="@id/adminphone"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/cpassword1"
                android:layout_width="250dp"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/arvo"
                android:hint="Confirm Password"

                android:textColor="@color/black"
                android:inputType="textPassword"
                android:singleLine="true"
                android:cursorVisible="true"
                android:scrollHorizontally="true"
                android:textCursorDrawable="@null"

                app:met_textColorHint="#000"
                app:met_primaryColor="#000"
                app:met_floatingLabel="highlight"
                android:layout_below="@id/password1"
                android:layout_marginBottom="15dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/createaccount"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cardview2"
        android:text="Create Account"
        android:textColor="#138ff7"
        android:background="@drawable/buttonround"/>
    <Button
        android:id="@+id/login1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/arvo"
        android:text="Already have an account? Login Here."
        android:textColor="#000"
        android:textAllCaps="false"
        android:background="#00000000"/>

</RelativeLayout>